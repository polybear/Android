<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    tools:context="com.study.mysharedpreference.MainActivity">

    <EditText
        android:id="@+id/etID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="51dp"
        android:layout_marginRight="51dp"
        android:layout_marginTop="92dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etPW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etID"
        android:layout_alignStart="@+id/etID"
        android:layout_below="@+id/etID"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etID"
        android:layout_alignBottom="@+id/etID"
        android:layout_toLeftOf="@+id/etPW"
        android:layout_toStartOf="@+id/etPW"
        android:gravity="center_horizontal"
        android:text="아이디" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etPW"
        android:layout_alignBottom="@+id/etPW"
        android:layout_toLeftOf="@+id/etPW"
        android:layout_toStartOf="@+id/etPW"
        android:text="비밀번호" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="로그인"
        android:layout_below="@+id/etPW"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
